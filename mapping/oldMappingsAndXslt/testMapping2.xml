<mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="mappingXMLToStandoff.xsd">

    <!-- text -->
    <mappingElement>
        <tag>
            <name>text</name>
            <class>noClass</class>
            <namespace>noNamespace</namespace>
            <separatesWords>false</separatesWords>
        </tag>
        <standoffClass>
            <classIri>http://www.knora.org/ontology/0112/roud-oeuvres#StandoffRoot</classIri>
        </standoffClass>
    </mappingElement>


    <!-- TEI -->
    <mappingElement>
        <tag>
            <name>TEI</name>
            <class>noClass</class>
            <namespace>noNamespace</namespace>
            <!-- <namespace>http://www.tei-c.org/ns/1.0</namespace>-->
            <separatesWords>false</separatesWords>
        </tag>
        <standoffClass>
            <classIri>http://www.knora.org/ontology/0112/roud-oeuvres#StandoffRootTEI</classIri>
        </standoffClass>
    </mappingElement>


    <!-- div -->
    <mappingElement>
        <tag>
            <name>div</name>
            <class>noClass</class>
            <namespace>noNamespace</namespace>
            <separatesWords>true</separatesWords>
        </tag>
        <standoffClass>
            <classIri>http://www.knora.org/ontology/0112/roud-oeuvres#StandoffDiv</classIri>
        </standoffClass>
    </mappingElement>


    <!-- placeName -->
    <mappingElement>
        <tag>
            <name>placeName</name>
            <class>noClass</class>  <!-- NO salsah-link, serve solo a differenziare i due a -->
            <namespace>noNamespace</namespace>
            <separatesWords>true</separatesWords>
        </tag>
        <standoffClass>
            <classIri>http://www.knora.org/ontology/0112/roud-oeuvres#StandoffPlaceName</classIri>
            <datatype>
                <type>http://www.knora.org/ontology/knora-base#StandoffLinkTag</type>
                <attributeName>knoraLink</attributeName>
            </datatype>
        </standoffClass>
    </mappingElement>


</mapping>