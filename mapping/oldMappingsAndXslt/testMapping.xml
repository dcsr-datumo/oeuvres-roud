    <!-- tei:head @type-->
    <mappingElement>
        <tag>
            <name>head</name>
            <class>noClass</class>
            <namespace>noNamespace</namespace>
            <separatesWords>true</separatesWords>
        </tag>
        <standoffClass>
            <classIri>http://www.knora.org/ontology/0112/roud-oeuvres#StandoffHeadTag</classIri>
            <attributes>
                <attribute>
                    <attributeName>type</attributeName>
                    <namespace>noNamespace</namespace>
